  </category>
  <category>
    <pattern>GOOD BYE *</pattern>
    <template><srai>GOOD BYE</srai></template>
  </category>
  <category>
    <pattern>GOOD NIGHT *</pattern>
    <template><srai>GOOD BYE</srai></template>
  </category>
  <category>
    <pattern>BYE *</pattern>
    <template><srai>GOOD BYE</srai></template>
  </category>
  <category>
    <pattern>PEACE OUT *</pattern>
    <template><srai>GOOD BYE</srai></template>
  </category>
  <category>
    <pattern>GUTEN NACHT *</pattern>
    <template><srai>GOOD BYE</srai></template>
  </category>
