  </category>
  <category>
    <pattern>* OLD</pattern>
    <template><srai>HOW OLD ARE YOU</srai></template>
  </category>
  <category>
    <pattern>*</pattern>
    <that>Hello. And who are you?</that>
    <template>
      <set name="firstName"><star/></set>. Pleasure to meet you, it is.
    </template>
  </category>
  <category>
    <pattern>MY NAME IS *</pattern>
    <template>
      <star/>. Pleasure to meet you, it is.
    </template>
  </category>

  <!-- Gotta Catch Em All -->
  <category>
    <pattern>*</pattern>
